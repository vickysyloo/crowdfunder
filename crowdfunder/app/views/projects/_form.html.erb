<% if @project.errors.any? %>
  <p>Oops - there were problems with your submission. Please fix the following:</p>
  <ul>
    <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for (@project) do |f| %>

  <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field :name %>
  </div>
  <div class="field">
     <%= f.label :description %><br />
     <%= f.text_area :description %>
  </div>
  <div class="field">
     <%= f.label :location %><br />
     <%= f.text_field :location %>
  </div>
  <div class="field">
     <%= f.label :deadline %><br />
     <%= f.datetime_field :deadline %>
  </div>
  <div class="field">
     <%= f.label :goal %><br />
     <%= f.number_field :goal %>
  </div>
  <div class="field">
     <%= f.label :image %><br />
     <%= f.text_field :image %>
  </div>
<!-- CHANGE TO UPLOAD BUTTON -->
  <div>
  <%= f.submit "Submit" %>
  </div>

  <div>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>

  <div>
    <%= f.label :reward %>
    <%= f.text_field :reward %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <%= link_to_remove_association "remove pledge", f %>

<% end %>
