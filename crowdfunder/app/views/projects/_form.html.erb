<% if @project.errors.any? %>
  <p>Oops - there were problems with your submission. Please fix the following:</p>
  <ul>
    <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for (@project) do |f| %>

  <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field :name %>
  </div>
  <div class="field">
     <%= f.label :description %><br />
     <%= f.text_area :description %>
  </div>
  <div class="field">
     <%= f.label :location %><br />
     <%= f.text_field :location %>
  </div>
  <div class="field">
     <%= f.label :deadline %><br />
     <%= f.date_select :deadline %>
  </div>
  <div class="field">
     <%= f.label :goal %><br />
     <%= f.number_field :goal %>
  </div>
  <div class="field">
     <%= f.label :image %><br />
     <%= f.file_field :image %>
  </div>
<!-- CHANGE TO UPLOAD BUTTON -->
  <div>
    <p>Pledges</p>
    <%= f.fields_for :pledges do |pledge| %>
      <%= render 'pledge_fields', :f => pledge %>
    <% end %>
    <%= link_to_add_association 'add new pledge', f, :pledges %>
  </div>

  <div>
  <%= f.submit "Submit" %>
  </div>


<% end %>
